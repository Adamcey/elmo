<%# load the mapping API %>
<% content_for(:per_page_js){ javascript_include_tag("https://maps.googleapis.com/maps/api/js?sensor=false") } %>

<%= link_to('&times;'.html_safe, root_path, :class => 'close_dashboard') %>

<h2><%= t('dashboard.recent_responses') %></h2>

<div class="recent_responses">
  <%= index_table(Response, @responses, :table_only => true) %>
</div>

<h2><%= t('dashboard.response_locations') %></h2>

<div class="response_locations">
</div>

<%= javascript_doc_ready do %>
  new ELMO.Views.Dashboard({
    map: {
      locations: <%= @location_answers.to_json.html_safe %>,
      info_window_url: <%= dashboard_info_window_url.to_json.html_safe %>
    }
  });
<% end %>