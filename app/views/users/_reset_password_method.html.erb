<% if !form.object.new_record? %>
  <%= form.radio_button(:reset_password_method, "dont") %> <%= t("users.leave_password_alone") %><br/>
<% end %>

<% prefix = form.object.new_record? ? "" : t("users.reset_password_and") + " " %>
<%= form.radio_button(:reset_password_method, "email") %> <%= (prefix + t("users.send_email_instructions")).capitalize %><br/>
<%= form.radio_button(:reset_password_method, "print") %> <%= (prefix + t("users.show_printable_instructions")).capitalize %><br/>
