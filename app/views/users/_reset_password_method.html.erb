<% if !form.object.new_record? %>
  <%= form.radio_button(:reset_password_method, "dont") %> <%= t("user.leave_password_alone") %><br/>
<% end %>

<% prefix = form.object.new_record? ? "" : t("user.reset_password_and") + " " %>
<%= form.radio_button(:reset_password_method, "email") %> <%= (prefix + t("user.send_email_instructions")).capitalize %><br/>
<%= form.radio_button(:reset_password_method, "print") %> <%= (prefix + t("user.show_printable_instructions")).capitalize %><br/>
