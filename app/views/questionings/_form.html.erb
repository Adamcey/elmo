<%= flash_and_form_errors(@questioning) %>

<%= elmo_form_for(@questioning) do |f| %>

  <%= f.field(:form_id, :type => :hidden) %>

  <%= f.fields_for(:question) do |qf| %>
    <%= render('questions/fields', :f => qf) %>
  <% end %>

  <%= published_warning(@questioning) if @questioning.published? && form_mode == :edit %>

  <% cant_update_core = cannot?(:update_core, @questioning) %>
  <%= f.field(:condition, :partial => 'conditions/form') %>
  <%= f.field(:required, :type => :check_box, :read_only => cant_update_core) %>
  <%= f.field(:hidden, :type => :check_box, :read_only => cant_update_core) %>

  <%= f.submit(:save) %>

<% end %>