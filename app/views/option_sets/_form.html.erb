<div class="option_set_form">

  <% if form_mode == :edit %>
    <%= published_warning(@option_set) if @option_set.published? %>
    <%= appears_elsewhere_warning(@option_set) if @option_set.has_questions? %>
  <% end %>

  <%= nice_form_for(@option_set) do |f| %>

    <%= form_field(f, :name, :required => true, :force_show_mode => cannot?(:update_core, @option_set)) %>
    <%= form_field(f, :geographic, :type => :check_box, :force_show_mode => cannot?(:change_geographic, @option_set)) %>
    <%= form_field(f, :options, :required => true, :partial => "options") %>
    <%= form_submit_button(f, :label => :save) unless ajax_request? %>
  <% end %>
</div>