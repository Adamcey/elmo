<%= form_for @user_session, :url => user_session_path do |f| %>
  <%= show_flash_and_form_errors %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.submit "Login" %>
  <%= link_to("Forgot Password?", new_password_reset_path) %>
<% end %>