<%= flash_and_form_errors(@user_session) %>

<%= elmo_form_for(@user_session, :url => user_session_path) do |f| %>
  <%= f.field(:login) %>
  <%= f.field(:password, :type => :password) %>
  <%= f.submit(:login) %>
  <%= link_to(t("user.forgot_password"), new_password_reset_path) %>
<% end %>

<%= javascript_doc_ready do %>
  $("input#user_session_login").focus();
<% end %>

