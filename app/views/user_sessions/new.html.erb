<% @title = t("common.login") %>

<%= flash_and_form_errors(@user_session) %>

<%= nice_form_for(@user_session, :url => user_session_path) do |f| %>
  <%= form_field(f, :login) %>
  <%= form_field(f, :password, :type => :password) %>
  <%= form_submit_button(f, :label => :login) %>
  <%= link_to(t("users.forgot_password"), new_password_reset_path) %>
<% end %>

<%= javascript_doc_ready do %>
  $("input#user_session_login").focus();
<% end %>

