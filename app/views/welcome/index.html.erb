<%= flash_and_form_errors %>

<% if current_mission || admin_mode? %>

  <%# use a partial so that just the blocks can be rendered on ajax request %>
  <div id="blocks"><%= render("blocks") %></div>

  <%= javascript_doc_ready do %>
    // setup minute reloading of page
    setInterval(function() { $('#blocks').load(Utils.build_path(""), 'auto=1'); }, 60000);
  <% end %>

<%# if there is no current mission, we should show a notice so the user can know to pick one %>
<% else %>

  <h1 class="title"><%= t('welcome.no_mission_selected.title') %></h1>
  <%= t('welcome.no_mission_selected.description') %>

<% end %>