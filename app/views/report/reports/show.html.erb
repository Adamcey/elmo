<div class="tip"><%= link_to("Back to Report Listing", report_reports_path) %></div>
<table class="report">
  <thead>
    <tr>
      <th></th>
      <% @report.headers[:col].each do |ch| %>
        <th><%= ch %></th>
      <% end %>
    </th>
  </thead>
  <tbody>
    <% @report.headers[:row].each_with_index do |rh, r| %>
      <tr>
        <th><%= rh %></th>
        <% @report.headers[:col].each_with_index do |ch, c| %>
          <td><%= @report.data[r][c] %></td>
        <% end %>
      </th>
    <% end %>
  </tbody>
</table>