<div class='qing-group' data-group-id="<%= item.id %>">
  <% @response.answer_groups.for_group(item).each do |instance, subtree| %>
    <%= render 'responses/answers/qing_group_instance', item: item, subtree: subtree, group_number: instance %>
  <% end %>
</div>

<% @response.answer_groups_empty.for_group(item).each do |instance, subtree| %>
  <%= javascript_doc_ready do %>
    new ELMO.Views.RepeatGroupFormView(<%= json(html_string: render('responses/answers/qing_group_instance', item: item, subtree: subtree, group_number: instance)) %>)
  <% end %>
<% end %>
