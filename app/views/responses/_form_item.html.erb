<%# Renders the answer sets for a form item, be it a group or a questioning. %>
<% @response.answer_groups %>
<% if item.is_a?(QingGroup) %>
  <%# No point rendering an empty group. %>
  <% unless subtree.empty? %>
    <% if item.repeats? %>
      <% @response.answer_groups.for_group(item).each do |instance, subtree| %>
        <%= render 'qing_group', item: item, subtree: subtree %>
      <% end %>
    <% else %>
      <%= render 'qing_group', item: item, subtree: subtree %>
    <% end %>
  <% end %>
<% else %>
  <%= render 'answer_set', answer_set: @response.answer_groups.answer_set_for_questioning(item) unless item.hidden? %>
<% end %>
