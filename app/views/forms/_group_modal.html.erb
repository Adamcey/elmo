<div id="form-item-group-modal" class="group-modal modal fade new-modal-style" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close group-cancel" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= t("form.add_group") %></h4>
      </div>
      <div class="modal-body">
        <% configatron.preferred_locales.each do |locale| %>
          <div class="translation">
            <%# Should option be replaced for group? %>
            <label for="option_level_name_<%= locale %>"><%= language_name(locale) %></label>
            <input type="text" class="form-control" id="option_level_name_<%= locale %>"
              data-locale="<%= locale %>" maxlength="<%= OptionLevel::MAX_NAME_LENGTH %>">
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default group-cancel" data-dismiss="modal"><%= I18n.t("common.cancel") %></button>
        <button type="button" class="btn btn-primary group-save"><%= I18n.t("common.save") %></button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
