<?xml version='1.0' encoding='UTF-8' ?>
<xforms xmlns="http://openrosa.org/xforms/xformsList">
<% @forms.each do |f| %>
  <xform>
    <formID>cceom.org:<%= f.id %></formID>
    <name><%= f.full_name %></name>
    <majorMinorVersion><%= f.version %></majorMinorVersion>
    <downloadUrl>
      <%# special URL that includes mission; locale is not necessary %>
      <%= form_with_mission_url(:mission_compact_name => f.mission.compact_name, :id => f.id, :locale => nil) %>
    </downloadUrl>
  </xform>
<% end %>
</xforms>