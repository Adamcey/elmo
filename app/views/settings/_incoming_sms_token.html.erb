<div class="regenerate-container">
<span id="display-incoming_sms_token"><%= form.object.incoming_sms_token %></span> &nbsp;&nbsp;&nbsp;&nbsp;
<% unless form_mode == :show %>
  <input class="regenerate btn btn-default btn-xs"
    data-display-id="display-incoming_sms_token"
    data-handler="regenerate_incoming_sms_token"
    type="button" value="<%= t('common.regenerate') %>">
  <%= loading_indicator success_failure: true %>
<% end %>
</div>
