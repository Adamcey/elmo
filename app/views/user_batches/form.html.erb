<%= elmo_form_for(@user_batch, :html => {:multipart => true}) do |f| %>
  <p class="instructions"><%= simple_format(t('user_batch.instructions_html', url: example_spreadsheet_user_batches_path(format: 'xlsx')), { }, :sanitize => false) %></p>
  <%= f.field(:file, :type => :file, :accept => '.xls,.xlsx', :required => true) %>
  <div class="submit-buttons">
    <%= f.submit(t('common.import'), :class => "btn btn-primary") %>
  </div>
<% end %>
