<%= flash_and_form_errors %>
<%= form_for(@option) do |f| %>
  <%= form_field(f, :value, :required => true) %>
  <% configatron.languages.each do |lang| %>
    <%= form_field(f, :"name_#{lang}", :label => "Name (#{language_name(lang)})", :required => lang == :eng) %>
  <% end %>
  <%= form_submit_button(f) %>
<% end %>