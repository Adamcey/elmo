<%= basic_form(@option) do |f|
  spec = {
    :fields => [{
      :col => :value,
      :required => true,
      :value => f.text_field(:value),
      :details => "The numeric value that best represents this option."
    }]
  }
  configatron.languages.each do |lang| 
    col = "name_#{lang}".to_sym
    spec[:fields] << {
      :col => col,
      :label => "Name (#{language_name(lang)})",
      :required => lang == :eng,
      :value => f.text_field(col),
      :details => lang == :eng ? "The textual description of this option that users will see." : ""
    }
  end
  spec
end
%>
    