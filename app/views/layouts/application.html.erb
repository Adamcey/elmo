<% body = yield %>
<!DOCTYPE html>
<html>
<head>
  <title>Command Center</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<% if false and Rails.env == "development" %><div id="dev_mode_warning">Development Mode</div><% end %>

<table id="layout">
	<tr>
		<td id="banner" colspan="2">
			<%= image_tag("eagle-circle.png") %>
			<div id="title">
				<h1>Election Observation Command Center</h1>
				<h2>at The Carter Center</h2>
			</div>
			<div id="userinfo">
				<% if current_user %>
					Logged in as <strong><%= current_user.login %></strong> |
					<%= link_to("Edit Profile", edit_user_path(current_user.id)) %> |
					<%= link_to("Logout", user_session_path, :method => :delete) %>
				<% else %>
					<%= link_to("Login", new_user_session_path) %>
				<% end %>
			</div>
		</td>
	</tr>
	<tr>
		<td id="nav">
			<ul>
				<li><%= link_to("Users", users_path) %></li>
				<li><%= link_to("Languages", languages_path) %></li>
			</ul>
		</td>

		<td class="content" id="<%= "#{controller.controller_name}_#{controller.action_name}" %>">
			<h1><%= @title %></h1>
			<%= body %>
		</td>
	</tr>
</table>

</body>
</html>
