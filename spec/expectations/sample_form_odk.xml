<?xml version="1.0" encoding="UTF-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Sample Form</h:title>
    <model>
      <instance>
        <data id="1" version="1">
          <q1/>
          <q2_1/>
          <q2_2/>
          <q3/>
        </data>
      </instance>
      <instance id="option_set_2">
        <options>
          <opt>
            <value>3</value>
            <key>option3</key>
            <opt>
              <value>4</value>
              <key>option4</key>
            </opt>
            <opt>
              <value>5</value>
              <key>option5</key>
            </opt>
          </opt>
          <opt>
            <value>6</value>
            <key>option6</key>
            <opt>
              <value>7</value>
              <key>option7</key>
            </opt>
            <opt>
              <value>8</value>
              <key>option8</key>
            </opt>
          </opt>
        </options>
      </instance>
      <itext>
        <translation lang="English">
          <text id="q1:label">
            <value>Question 1</value>
          </text>
          <text id="q1:hint">
            <value>Hint 1</value>
          </text>
          <text id="q2_1:label">
            <value>Question 2 - Kingdom</value>
          </text>
          <text id="q2_1:hint">
            <value>Hint 2</value>
          </text>
          <text id="q2_2:label">
            <value>Question 2 - Species</value>
          </text>
          <text id="q2_2:hint">
            <value>Hint 2</value>
          </text>
          <text id="q3:label">
            <value>Question 3</value>
          </text>
          <text id="q3:hint">
            <value>Hint 3</value>
          </text>
          <text id="blankoption">
            <value/>
          </text>
          <text id="option1">
            <value>Cat</value>
          </text>
          <text id="option2">
            <value>Dog</value>
          </text>
          <text id="option3">
            <value>Animal</value>
          </text>
          <text id="option4">
            <value>Cat</value>
          </text>
          <text id="option5">
            <value>Dog</value>
          </text>
          <text id="option6">
            <value>Plant</value>
          </text>
          <text id="option7">
            <value>Tulip</value>
          </text>
          <text id="option8">
            <value>Oak</value>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/q1" type="select1"/>
      <bind nodeset="/data/q2_1" type="select1"/>
      <bind nodeset="/data/q2_2" relevant="(count(instance('option_set_2')/options/opt[value=/data/q2_1]/opt) &gt; 0) and (count(instance('option_set_2')/options/opt[value=/data/q2_1]/opt/blank) = 0)" type="select1"/>
      <bind nodeset="/data/q3" type="int"/>
    </model>
  </h:head>
  <h:body>
    <select1 ref="/data/q1">
      <label ref="jr:itext('q1:label')"/>
      <hint ref="jr:itext('q1:hint')"/>
      <item>
        <label ref="jr:itext('option1')"/>
        <value>1</value>
      </item>
      <item>
        <label ref="jr:itext('option2')"/>
        <value>2</value>
      </item>
    </select1>
    <select1 ref="/data/q2_1">
      <label ref="jr:itext('q2_1:label')"/>
      <hint ref="jr:itext('q2_1:hint')"/>
      <itemset nodeset="instance('option_set_2')/options/opt">
        <label ref="jr:itext(key)"/>
        <value ref="value"/>
      </itemset>
    </select1>
    <select1 ref="/data/q2_2">
      <label ref="jr:itext('q2_2:label')"/>
      <hint ref="jr:itext('q2_2:hint')"/>
      <itemset nodeset="instance('option_set_2')/options/opt[value=/data/q2_1]/opt">
        <label ref="jr:itext(key)"/>
        <value ref="value"/>
      </itemset>
    </select1>
    <input ref="/data/q3">
      <label ref="jr:itext('q3:label')"/>
      <hint ref="jr:itext('q3:hint')"/>
    </input>
  </h:body>
</h:html>
