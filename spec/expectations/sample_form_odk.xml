<?xml version="1.0" encoding="UTF-8"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Sample Form</h:title>
    <model>
      <instance>
        <data id="1" version="1">
          <q1/>
          <q2_1/>
          <q2_2/>
          <q3/>
          <q4/>
        </data>
      </instance>
      <itext>
        <translation lang="English">
          <text id="q1:label">
            <value>Question 1</value>
          </text>
          <text id="q1:hint">
            <value>Hint 1</value>
          </text>
          <text id="q2_1:label">
            <value>Question 2 - Kingdom</value>
          </text>
          <text id="q2_1:hint">
            <value>Hint 2</value>
          </text>
          <text id="q2_2:label">
            <value>Question 2 - Species</value>
          </text>
          <text id="q2_2:hint">
            <value>Hint 2</value>
          </text>
          <text id="q3:label">
            <value>Question 3</value>
          </text>
          <text id="q3:hint">
            <value>Hint 3</value>
          </text>
          <text id="q4:label">
            <value>Question Title 1</value>
          </text>
          <text id="q4:hint">
            <value>Question Hint 1</value>
          </text>
          <text id="on2">
            <value>Cat</value>
          </text>
          <text id="on3">
            <value>Dog</value>
          </text>
          <text id="on5">
            <value>Animal</value>
          </text>
          <text id="on8">
            <value>Plant</value>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/q1" type="select1"/>
      <bind nodeset="/data/q2_1" type="select1"/>
      <bind nodeset="/data/q2_2" type="string"/>
      <bind nodeset="/data/q3" type="int"/>
      <bind nodeset="/data/q4" type="select"/>
    </model>
  </h:head>
  <h:body>
    <select1 ref="/data/q1">
      <label ref="jr:itext('q1:label')"/>
      <hint ref="jr:itext('q1:hint')"/>
      <item>
        <label ref="jr:itext('on2')"/>
        <value>on2</value>
      </item>
      <item>
        <label ref="jr:itext('on3')"/>
        <value>on3</value>
      </item>
    </select1>
    <select1 ref="/data/q2_1">
      <label ref="jr:itext('q2_1:label')"/>
      <hint ref="jr:itext('q2_1:hint')"/>
      <item>
        <label ref="jr:itext('on5')"/>
        <value>on5</value>
      </item>
      <item>
        <label ref="jr:itext('on8')"/>
        <value>on8</value>
      </item>
    </select1>
    <input query="instance('os2')/root/item[parent_id=/data/q2_1]" ref="/data/q2_2">
      <label ref="jr:itext('q2_2:label')"/>
      <hint ref="jr:itext('q2_2:hint')"/>
    </input>
    <input ref="/data/q3">
      <label ref="jr:itext('q3:label')"/>
      <hint ref="jr:itext('q3:hint')"/>
    </input>
    <select ref="/data/q4">
      <label ref="jr:itext('q4:label')"/>
      <hint ref="jr:itext('q4:hint')"/>
      <item>
        <label ref="jr:itext('on2')"/>
        <value>on2</value>
      </item>
      <item>
        <label ref="jr:itext('on3')"/>
        <value>on3</value>
      </item>
    </select>
  </h:body>
</h:html>
