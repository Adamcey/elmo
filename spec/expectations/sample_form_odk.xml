<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Sample Form 1</h:title>
    <model>
      <instance>
        <data id="1" version="1">
          <q1/>
          <q2/>
          <q3/>
        </data>
      </instance>
      <itext>
        <translation lang="English">
          <text id="q1:label">
            <value>Question Title 1</value>
          </text>
          <text id="q1:hint">
            <value>Question Hint 1</value>
          </text>
          <text id="q2:label">
            <value>Question Title 2</value>
          </text>
          <text id="q2:hint">
            <value>Question Hint 2</value>
          </text>
          <text id="q3:label">
            <value>Question Title 3</value>
          </text>
          <text id="q3:hint">
            <value>Question Hint 3</value>
          </text>
          <text id="option1">
            <value>Cat</value>
          </text>
          <text id="option2">
            <value>Dog</value>
          </text>
          <text id="option3">
            <value>Animal</value>
          </text>
          <text id="option6">
            <value>Plant</value>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/q1" type="select1"/>
      <bind nodeset="/data/q2" type="select1"/>
      <bind nodeset="/data/q3" type="int"/>
    </model>
  </h:head>
  <h:body>
    <select1 ref="/data/q1">
      <label ref="jr:itext('q1:label')"/>
      <hint ref="jr:itext('q1:hint')"/>
      <item>
        <label ref="jr:itext('option1')"/>
        <value>1</value>
      </item>
      <item>
        <label ref="jr:itext('option2')"/>
        <value>2</value>
      </item>
    </select1>
    <select1 ref="/data/q2">
      <label ref="jr:itext('q2:label')"/>
      <hint ref="jr:itext('q2:hint')"/>
      <item>
        <label ref="jr:itext('option3')"/>
        <value>3</value>
      </item>
      <item>
        <label ref="jr:itext('option6')"/>
        <value>6</value>
      </item>
    </select1>
    <input ref="/data/q3">
      <label ref="jr:itext('q3:label')"/>
      <hint ref="jr:itext('q3:hint')"/>
    </input>
  </h:body>
</h:html>
